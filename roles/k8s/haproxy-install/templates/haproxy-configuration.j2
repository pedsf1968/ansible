# {{ ansible_managed }}
global
    log 127.0.0.1:514	local0
    log 127.0.0.1:514 local0 info
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user        haproxy
    group       haproxy
    daemon
    pidfile     /var/run/haproxy.pid
    maxconn     4000


#---------------------------------------------------------------------
# common defaults that all the 'listen' and 'backend' sections will
# use if not designated in their block
#---------------------------------------------------------------------
defaults
    mode                    http
    log                     global
    option                  httplog
    option                  dontlognull
    option http-server-close
    option                  redispatch
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn                 3000


################################################################ STATS FRONTEND
frontend stats
   bind *:8404
   stats enable
   stats uri /stats
   stats refresh 20s
   stats admin if TRUE


################################################################## API FRONTEND
frontend k8s-frontend-api
   bind *:6443
   mode tcp
   option tcplog
   default_backend k8s-backend-api


############################################################## INGRESS FRONTEND
frontend k8s-frontend-ingress
   bind *:443
   mode tcp
   option  tcplog
   option forwardfor
   default_backend k8s-backend-ingress


################################################################## API BACKTEND
backend k8s-backend-api
   mode tcp
   option tcplog
   option tcp-check
   balance roundrobin
   default-server inter 10s downinter 5s rise 2 fall 2 slowstart 60s maxconn 250 maxqueue 256 weight 100
{% for host in groups['masters'] %}
    server {{ host }} {{ hostvars[host]['ansible_eth0']['ipv4']['address'] }}:6443 check
{% endfor %}


############################################################## INGRESS BACKTEND
backend k8s-backend-ingress
        mode tcp
        option  tcplog
        option ssl-hello-chk
        option log-health-checks
        balance roundrobin
        default-server inter 10s fall 3 rise 3
{% for host in groups['workers'] %}
        server {{ host }} {{ hostvars[host]['ansible_eth0']['ipv4']['address'] }}:443 check
{% endfor %}